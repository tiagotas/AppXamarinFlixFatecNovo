<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarinFlixFatecNovo.App">
    <Application.Resources>

        <ResourceDictionary>

            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#2f2f30" />
            </Style>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#2f2f30"/>
                <Setter Property="BarTextColor" Value="#FFFFFF"/>
            </Style>

            
            <Style x:Key="Titulo" TargetType="Label">
                <Setter Property="TextColor" Value="#e80000"/>
                <Setter Property="FontSize" Value="40"/>
            </Style>

            <Style x:Key="ButtonVermelhoMenu" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#e80000" />
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="MinimumHeightRequest" Value="150"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="BorderRadius" Value="50"/>
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="VerticalOptions" Value="Fill" />
            </Style>

            <Style x:Key="LabelTextoBranco" TargetType="Label">
                <Setter Property="TextColor" Value="#FFF"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="LabelTextoVermelho" TargetType="Label">
                <Setter Property="TextColor" Value="#e80000"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="ButtonPosters" TargetType="ImageButton">
                <Setter Property="Aspect" Value="Fill" />
                <Setter Property="BorderColor" Value="#e80000" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="10" />
            </Style>

            <Style x:Key="LogoNaListaDePosters" TargetType="Image">
                <Setter Property="HeightRequest" Value="80"/>
            </Style>

            <Style x:Key="LogoNoFilme" TargetType="Image">
                <Setter Property="HeightRequest" Value="50"/>
            </Style>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>